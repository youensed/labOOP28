<Window x:Class="ExplorerApp.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування" Height="600" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Save" Width="350" Margin="4" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="350" Margin="4" Click="CancelButton_Click"/>
        </StackPanel>
        <TextBox x:Name="EditorTextBox" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
