<Window x:Class="ExplorerApp.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Підказка" Height="150" Width="300">
    <StackPanel>
        <TextBlock x:Name="PromptMessage" Margin="10"/>
        <TextBox x:Name="ResponseTextBox" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="10,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
